<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Nova artigo</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="POST">
                <input class="form-control mb-3" type="text" name="title" placeholder="Defina o titulo do artigo">
                <textarea class="form-control mb-3" placeholder="Escreva o artigo aqui!" name="body" id="article"></textarea>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            "advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"
        ]
    })
</script>
